<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">

    <TextView
        android:id="@+id/english_with_abde"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="english with abde"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:background="@drawable/english"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/presenting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="your learning app"
        android:textSize="20sp"
        android:layout_below="@+id/english_with_abde"
        android:background="@drawable/english"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp"/>
    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/presenting"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_txt"
        android:gravity="center_vertical"
        android:foregroundGravity="center_horizontal"
        android:hint="full name"
        android:textAlignment="center"
        tools:ignore="RtlCompat"/>
    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/full_name"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_txt"
        android:gravity="center_vertical"
        android:foregroundGravity="center_horizontal"
        android:hint="age"
        android:textAlignment="center"
        tools:ignore="RtlCompat"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/age"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_txt"
        android:gravity="center_vertical"
        android:foregroundGravity="center_horizontal"
        android:hint="email"
        android:textAlignment="center"
        tools:ignore="RtlCompat"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_txt"
        android:gravity="center_vertical"
        android:foregroundGravity="center_horizontal"
        android:hint="password"
        android:textAlignment="center"
        tools:ignore="RtlCompat"/>
    <Button
        android:id="@+id/register_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="register"
        android:layout_centerInParent="true"
        android:layout_below="@+id/password"
        android:background="@drawable/custom_button"
        android:layout_marginTop="32dp"/>


</RelativeLayout>